rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ===== ADMIN ACCESS CONTROL =====
    
    // Helper function: Check if user is authenticated admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Helper function: Check if user is admin by email
    function isAdminByEmail(email) {
      return request.auth != null && 
             request.auth.token.email == email &&
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // ===== EVENTS COLLECTION =====
    
    match /events/{eventId} {
      // Public read access for browsing events
      allow read: if true;
      
      // Admin full access (create, update, delete)
      allow create, update, delete: if isAdmin();
      
      // Participants subcollection
      match /participants/{participantId} {
        // Public read access for certificate generation
        allow read: if true;

        // Allow participants to update their own certificate status (authenticated)
        // OR allow anonymous users to update only certificate status fields
        allow update: if request.auth != null && 
                      request.auth.token.email == resource.data.email ||
                      (request.auth == null && 
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['certificateStatus', 'downloadedAt', 'updatedAt']));

        // Admin full access (create, update, delete)
        allow create, update, delete: if isAdmin();
      }
      
    }
    
    // ===== ADMINS COLLECTION =====
    
    match /admins/{adminId} {
      // Users can read their own admin record
      allow read: if request.auth != null && 
                   request.auth.uid == adminId;
      
      // Users can create their own admin record (for first-time setup)
      allow create: if request.auth != null && 
                     request.auth.uid == adminId &&
                     request.resource.data.email == request.auth.token.email;
      
      // Users can update their own admin record
      allow update: if request.auth != null && 
                     request.auth.uid == adminId;
      
      // Admins can read all admin records
      allow read: if isAdmin();
      
      // Admins can delete other admin records (but not their own)
      allow delete: if isAdmin() && 
                     adminId != request.auth.uid;
    }
    
    // ===== INVITES COLLECTION =====
    
    match /invites/{email} {
      // Only admins can manage invites
      allow read, write: if isAdmin();
      
      // Users can read their own invite
      allow read: if request.auth != null && 
                   request.auth.token.email == email;
    }
    
    // ===== SECURITY ENHANCEMENTS =====
    
    // Prevent mass deletion (limit to 10 documents at once)
    function isReasonableBatchSize() {
      return request.writeFields().size() <= 10;
    }
    
    // ===== FALLBACK SECURITY =====
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
